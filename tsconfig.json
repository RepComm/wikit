{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable",
      "ES6"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "allowJs": true,
    "emitDeclarationOnly": true,
    "outDir": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/images"
  ]
}